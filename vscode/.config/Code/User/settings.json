{
    // Editor settings
    "editor.rulers": [
        80
    ],
    "editor.insertSpaces": true,
    "editor.tabSize": 4,

    // Vim configuration
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": false,
    "vim.autoindent": true,
    "vim.easymotion": true,

    "vim.normalModeKeyBindingsNonRecursive": [
    // Delete - No yank
    {
        "before": ["<leader>", "d"],
        "after": ["d", "d"]
    },
    // Delete - Yank
    {
        "before": ["d"],
        "after": ["\"", "_", "d"]
    },
    {
        "before": ["K"],
        "commands": ["lineBreakInsert"],
        "silent": true
    },
    // Keep centre
    {
        "before": ["<crtl>", "d"],
        "after": ["<crtl>", "d", "z", "z"]
    },
    {
        "before": ["<crtl>", "u"],
        "after": ["<crtl>", "u", "z", "z"]
    },
    {
        "before": ["n"],
        "after": ["n", "z", "z", "z", "v"]
    },
    {
        "before": ["N"],
        "after": ["N", "z", "z", "z", "v"]
    },
    ],
    "vim.insertModeKeyBindings": [
    {
        "before": ["j", "j"],
        "after": ["<Esc>"]
    },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
    {
        "before": ["p"],
        "after": ["p", "g", "v", "y"]
    }
    ],
    "vim.enableNeovim": true,
    "vim.neovimUseConfigFile": true,

    // Terminal
    "terminal.external.osxExec": "Terminal.app",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "settingsSync.ignoredSettings": [],

    // --- Single-file focus ---
    "workbench.editor.showTabs": "single",
    "workbench.editor.enablePreview": true,        // Open files replace the current one
    "workbench.editor.enablePreviewFromQuickOpen": true,

    // --- Sidebar / Explorer ---
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "left",
    "workbench.sideBar.visible": false,            // Start with sidebar closed

    // --- Close behavior ---
    "workbench.editor.closeOnFileDelete": true,    // Close editor if file deleted
    "workbench.editor.focusRecentEditorAfterClose": true,

    // --- Minimap ---
    "editor.minimap.enabled": false,
}



